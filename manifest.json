{
  "description": "Gmail",
  "manifest_version": 2,
  "version":"0.0.1",
  "name": "GMail Sidebar",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/images/icon19.png",
      "38": "assets/images/icon38.png"
    },
    "default_popup": "popup.html"
  },
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_icon": "assets/images/sidebar.png"
  },
  "icons": {
    "48": "assets/images/icon48.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "Alt+Z"
      }
    }
  }
}
